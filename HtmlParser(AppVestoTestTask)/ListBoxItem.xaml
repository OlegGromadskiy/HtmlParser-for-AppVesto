<UserControl x:Class="HtmlParser_AppVestoTestTask_.ListBoxItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HtmlParser_AppVestoTestTask_"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800" Name="Self">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding ElementName=Self, Path=DataContext.Name}"/>
        <TextBlock Text="{Binding ElementName=Self, Path=DataContext.Duration}" Grid.Column="1"/>
    </Grid>
</UserControl>
